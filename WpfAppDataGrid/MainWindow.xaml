<Window x:Class="WpfAppDataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDataGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <CheckBox x:Name="chk1" Content="click"/>
            
            <Button x:Name="btnshow" Content="Show" Height="30" Width="180" Margin="0,25,0,0" Click="btnshow_Click"/>

            <DataGrid x:Name="DataGrid1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="130" Width="431" Margin="55,55,0,55">

            </DataGrid>

        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="100,280,0,0">
            <Button x:Name="btnLoad" Content="Load from File" Height="30" Width="90" Margin="0,0,0,0" Click="btnLoad_Click"/>
            
            <Button x:Name="btnsave" Content="Save" Height="30" Width="90" Margin="10,0,0,0" Click="btnsave_Click"/>
            
        </StackPanel>
    </Grid>

</Window>
